<?xml version="1.0" encoding="utf-8"?>
<com.gmail.alexellingsen.nameless_wol.DeviceView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/list_item_device_padding">

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:text="list_item_name"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/list_item_host_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list_item_host_port"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/list_item_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list_item_mac"
        android:textSize="14sp" />

</com.gmail.alexellingsen.nameless_wol.DeviceView>